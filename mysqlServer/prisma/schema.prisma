generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id       String       @id
  username String       @unique
  password String
  movies   userMovies[]
}

model userMovies {
  movie_id    String  @id
  users       users   @relation(fields: [userId], references: [id])
  userId      String
  title       String
  year        String
  type        String
  poster      String
  userComment String?
  userRate    Int?
}
